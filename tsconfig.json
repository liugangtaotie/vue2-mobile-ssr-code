{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@COM/*": [
        "src/components/*"
      ],
      "@VIE/*": [
        "src/views/*"
      ],
      "@ASS/*": [
        "src/assets/*"
      ],
      "@API/*": [
        "src/api/*"
      ],
      "@STA/*": [
        "static/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/entry-server.js",
    "src/entry-client.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
